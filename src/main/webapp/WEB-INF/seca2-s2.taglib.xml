<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd"
    version="2.0">
    <namespace>http://seca2.jsf/custom</namespace>
    <tag>
        <tag-name>messenger</tag-name>
        
        <component>
            <component-type>Messenger</component-type>
            <renderer-type>seca2.jsf.custom.messenger.MessengerRenderer</renderer-type>
        </component>
        
        <attribute>
            <name>testAttribute</name>
            <type>java.lang.String</type>
            <description>This is a test attribute</description>
        </attribute>
        
        <attribute>
            <name>closable</name>
            <type>java.lang.Boolean</type>
            <description>If messages can be dismissed</description>
        </attribute>
        
        <attribute>
            <name>for</name>
            <type>java.lang.String</type>
            <description>The component ID which this messenger is for.</description>
        </attribute>
        
        <attribute>
            <name>showSummary</name>
            <type>java.lang.Boolean</type>
            <description>Whether to show the summary of the message.</description>
        </attribute>
        
        <attribute>
            <name>showDetail</name>
            <type>java.lang.Boolean</type>
            <description>Whether to show the details of the message.</description>
        </attribute>
        
    </tag>
    <tag>
        <tag-name>dropdown</tag-name>
        
        <component>
            <component-type>Dropdown</component-type>
            <renderer-type>seca2.jsf.custom.dropdown.DropdownRenderer</renderer-type>
            <component-extension>SelectOne</component-extension>
        </component>
        
        <attribute>
            <name>emptyMessage</name>
            <type>java.lang.String</type>
            <description>Message to be displayed if there are no items.</description>
        </attribute>
        
        <attribute>
            <name>styleClass</name>
            <type>java.lang.String</type>
            <description>The style class for the outer div tags.</description>
        </attribute>
        
        <attribute>
            <name>buttonClass</name>
            <type>java.lang.String</type>
            <description>The style class for the outer button tags.</description>
        </attribute>
        
        <attribute>
            <name>arrowClass</name>
            <type>java.lang.String</type>
            <description>The style class for the arrow.</description>
        </attribute>
        
        <attribute>
            <name>listClass</name>
            <type>java.lang.String</type>
            <description>The style class for the ul tags.</description>
        </attribute>
        
        <attribute>
            <name>addListClass</name>
            <type>java.lang.String</type>
            <description>Additional style class for the ul tags.</description>
        </attribute>
        
        <attribute>
            <name>listItems</name>
            <type>java.util.List</type>
            <description>List object containing all items</description>
        </attribute>
        
        <attribute>
            <name>buttonColor</name>
            <type>java.lang.String</type>
            <description>Bootstrap color (default, primary, etc)</description>
        </attribute>
        
        <attribute>
            <name>value</name>
            <type>java.lang.Object</type>
            <description>Selected value</description>
        </attribute>
    </tag>
</facelet-taglib>
