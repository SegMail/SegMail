<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd"
    version="2.0">
    <namespace></namespace>
    <namespace>http://seca2.jsf/custom</namespace>
    <tag>
        <tag-name>messenger</tag-name>
        
        <component>
            <component-type>Messenger</component-type>
            <renderer-type>seca2.jsf.custom.messenger.MessengerRenderer</renderer-type>
        </component>
        
        <attribute>
            <name>testAttribute</name>
            <type>java.lang.String</type>
            <description>This is a test attribute</description>
        </attribute>
        
        <attribute>
            <name>closable</name>
            <type>java.lang.Boolean</type>
            <description>If messages can be dismissed</description>
        </attribute>
        
        <attribute>
            <name>for</name>
            <type>java.lang.String</type>
            <description>The component ID which this messenger is for.</description>
        </attribute>
        
        <attribute>
            <name>showSummary</name>
            <type>java.lang.Boolean</type>
            <description>Whether to show the summary of the message.</description>
        </attribute>
        
        <attribute>
            <name>showDetail</name>
            <type>java.lang.Boolean</type>
            <description>Whether to show the details of the message.</description>
        </attribute>
        
    </tag>
</facelet-taglib>
